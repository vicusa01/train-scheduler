@model IssueTicketsModel
@{
    ViewBag.Title = "Issue tickets";
}

<form asp-action="IssueTickets" asp-controller="Ticket">
    <div asp-validation-summary="All" class="text-danger"></div>

    @for (int i = 0; i < Model.Tickets.Count; i++)
    {
        <div style="border: 1px solid black; padding: 30px;">
            <div class="form-group">
                <input type="hidden" asp-for="Tickets[i].ScheduleId" />
            </div>
            <div class="form-group">
                <label asp-for="Tickets[i].Fio" class="control-label">FIO</label>
                <input type="text" asp-for="Tickets[i].Fio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tickets[i].Price" class="control-label">Price</label>
                <input disabled type="number" asp-for="Tickets[i].Price" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-secondary" />
            </div>
        </div>
    }
    <br />
    <div class="form-group">
        <input type="submit" value="Buy" class="btn btn-outline-success" />
    </div>
</form>