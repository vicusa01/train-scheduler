@model UpdateTicketModel
@{
    ViewBag.Title = "Update ticket";
}

<form asp-action="EditTicket" asp-controller="Admin">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label class="control-label">Destination</label>
        <select class="custom-select" aria-label="Select departure stop"
                asp-for="ScheduleId"
                asp-items="@Model.Schedules">
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Arrival</label>
        <select class="custom-select" aria-label="Select departure stop"
                asp-for="UserId"
                asp-items="@(new SelectList(Model.Users, nameof(IdentityUser.Id), nameof(IdentityUser.Email)))">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Fio" class="control-label">FIO</label>
        <input type="text" asp-for="Fio" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>