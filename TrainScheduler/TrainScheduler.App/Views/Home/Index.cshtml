@{
    ViewData["Title"] = "Home Page";
}
<section class="hero">
	<div class='hero__container'>
		<div class="hero__content">
			<h1 class="hero__title">Perfect way to book a  train ticket</h1>
			<p class="hero__text text">
				Book tickets from the comfort of your home. Quick and easy
			</p>
			<div class="hero__filter filter">

				<div class="filter__block block-filter">
					<div class="block-filter__button">
						
						
						<div>
							<a class="nav-link text-dark" asp-controller="Schedule" asp-action="Schedule">Schedule for day</a>
						</div>
						<div class="block-filter__icon">
							<svg width="20" height="14" viewBox="0 0 9 6" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M4.50012 5.75C4.69202 5.75 4.88402 5.67065 5.03027 5.51196L8.78027 1.44946C9.07324 1.13208 9.07324 0.61792 8.78027 0.300537C8.4873 -0.0168457 8.0127 -0.0168457 7.71973 0.300537L4.50012 3.78984L1.27981 0.301172C0.986838 -0.0162111 0.512229 -0.0162111 0.21926 0.301172C-0.0737085 0.618555 -0.0737085 1.13271 0.21926 1.4501L3.96926 5.5126C4.11574 5.67129 4.30793 5.75 4.50012 5.75Z" fill="#1AA090" />
							</svg>
						</div>
					</div>
					<div class="block-filter__dropdown">
						<div>
							<a class="nav-link text-dark" asp-controller="Schedule" asp-action="Schedule">Schedule for day</a>
						</div>

						<div>
							<a class="nav-link text-dark" asp-controller="Schedule" asp-action="AvailableSeats">AvailableSeats</a>
						</div>
					</div>
				</div>

			</div>
		</div>
		<div class="hero__img"><img src="~/img/Belarusian-Railway-orders-ten-broad-gauge-FLIRT-trains-from-Stadler.jpg" alt="house"></div>
	</div>
	<svg class="hero-deco" width="128" height="501" viewBox="0 0 128 501" fill="none"
		 xmlns="http://www.w3.org/2000/svg">
		<rect x="92.4355" y="314.033" width="127.863" height="123.867" transform="rotate(42.3449 92.4355 314.033)"
			  fill="var(--accent-color)" stroke="#121B25" stroke-width="12" />
		<rect x="92.4355" y="212.355" width="127.863" height="123.867" transform="rotate(42.3449 92.4355 212.355)"
			  fill="var(--accent-color)" stroke="#121B25" stroke-width="12" />
		<rect x="92.4355" y="110.678" width="127.863" height="123.867" transform="rotate(42.3449 92.4355 110.678)"
			  fill="var(--accent-color)" stroke="#121B25" stroke-width="12" />
		<rect x="92.4355" y="9" width="127.863" height="123.867" transform="rotate(42.3449 92.4355 9)"
			  fill="var(--accent-color)" stroke="#121B25" stroke-width="12" />
	</svg>
</section>
