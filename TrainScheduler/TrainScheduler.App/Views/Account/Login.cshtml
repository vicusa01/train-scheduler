@model TrainScheduler.Model.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="wrapper">
    <form class="login1" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="All" class="text-danger"></div>
        <p class="title">Log in</p>
        <input type ="email" asp-for="Email" placeholder="Email" autofocus />
        <i class="fa fa-user"></i>
        <input type="password" asp-for="Password" placeholder="Password" />
        <i class="fa fa-key"></i>
        <input type="checkbox" asp-for="RememberMe" />
        <label asp-for="RememberMe">RememberMe</label>
        <button type="submit" value="Login In">
            <span class="state">Log in</span>
        </button>
    </form>
</div>



